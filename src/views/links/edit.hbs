<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" value="{{link.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="url" class="form-control" value="{{link.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>